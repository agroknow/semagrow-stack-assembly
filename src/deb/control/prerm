#!/bin/sh

SEMAGROW_SHORT_NAME="${distribution.all.package.shortname}";
SEMAGROW_HOME="${distribution.all.package.home}";

echo "PREREMOVE WITH $@"

#rm -f /etc/init.d/$SEMAGROW_SHORT_NAME

set -e
case "$1" in
    remove)
	    echo "Remove";
    ;;
    upgrade)
	    echo "Upgrade";
			echo "Deleting : $SEMAGROW_HOME/work/Catalina/localhost/SemaGrow";
			rm -rf $SEMAGROW_HOME/work/Catalina/localhost/SemaGrow
			echo "Deleting : $SEMAGROW_HOME/domains/localhost/SemaGrow";
			rm -rf $SEMAGROW_HOME/domains/localhost/SemaGrow
			echo "Deleting : $SEMAGROW_HOME/domains/localhost/SemaGrow.war";
			rm -f $SEMAGROW_HOME/domains/localhost/SemaGrow.war
    ;;
    fail-upgrade)
	    echo "Fail upgrade";
    ;;
esac
